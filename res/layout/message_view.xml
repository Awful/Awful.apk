<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/message_view" android:layout_height="match_parent" android:layout_width="match_parent" android:fillViewport="true">
	<LinearLayout 
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <ImageView 
        style="@style/HorizontalSeparator"
        />
	<RelativeLayout
		android:id="@+id/messagehead"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@color/forums_blue"
		android:padding="6dip"
		>
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="16dip"
			>
			<TextView
				android:id="@+id/message_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20dip"
				android:textStyle="bold"
				android:textColor="#ffffff"
                android:shadowColor="#070707"
                android:shadowDx="0"
                android:shadowDy="-1"
                android:shadowRadius="0.2"
				/>
			<TextView
				android:id="@+id/username"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/message_title"
				android:textSize="16dip"
				android:textColor="#ffffff"
				/>
				<TextView
				android:id="@+id/post_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/message_title"
				android:textSize="16dip"
				android:textColor="#ffffff"
				android:layout_toLeftOf="@+id/message_reply_button"/>
				
			<Button android:id="@+id/message_reply_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Send" android:layout_alignParentRight="true"></Button>
		</RelativeLayout>
	</RelativeLayout>
	<TextView
			android:id="@+id/messagebody"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="6dip"
			android:textColor="@color/default_post_font"
			android:focusable="true" android:focusableInTouchMode="true"/>
			
	<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="6dip">
	<TextView android:id="@+id/misc_text_subject" android:text="Subject: " android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	
	<EditText
			android:id="@+id/message_subject"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="6dip"
			android:textColor="@color/default_post_font"
			android:singleLine="true"
			/>
			</LinearLayout>
	<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="6dip">
	<TextView android:id="@+id/misc_text_recipient" android:text="Recipient: " android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	<EditText
			android:id="@+id/message_user"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="6dip"
			android:textColor="@color/default_post_font"
			android:singleLine="true"
			/>
	</LinearLayout>
	<TextView android:id="@+id/misc_text_message" android:text="Message:" android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:padding="6dip"/>
	<EditText android:id="@+id/edit_reply_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="textMultiLine"
			android:scrollbars="vertical"
			android:scrollbarStyle="insideOverlay"
			android:scrollbarFadeDuration="500"
			android:scrollbarDefaultDelayBeforeFade="1000"
			android:scrollbarAlwaysDrawVerticalTrack="true"
			android:minLines="5" android:paddingLeft="10dip" android:paddingRight="10dip"></EditText>
	</LinearLayout>
</ScrollView>
