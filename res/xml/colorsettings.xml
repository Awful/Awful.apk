<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <PreferenceCategory android:title="@string/colors">
		<com.ferg.awful.preferences.ColorPickerPreference
		   	android:key="default_post_font_color"
		   	android:title="@string/default_post_font_color"
		   	android:defaultValue="@color/default_post_font"
		   	alphaSlider="false"
			/>
		<com.ferg.awful.preferences.ColorPickerPreference
		   	android:key="secondary_post_font_color"
		   	android:title="@string/secondary_post_font_color"
		   	android:defaultValue="@color/secondary_post_font"
		   	alphaSlider="false"
			/>
		<com.ferg.awful.preferences.ColorPickerPreference
		   	android:key="default_post_background_color"
		   	android:title="@string/default_post_background_color"
		   	android:defaultValue="@color/background"
		   	alphaSlider="false"
			/>
		<com.ferg.awful.preferences.ColorPickerPreference
		   	android:key="alternative_post_background_color"
		   	android:title="@string/default_post_background_color"
		   	android:defaultValue="@color/background"
		   	alphaSlider="false"
			/>
		<com.ferg.awful.preferences.ColorPickerPreference
		   	alphaSlider="false"
		   	android:key="read_post_background_color"
		   	android:title="@string/read_post_background_color"
		   	android:defaultValue="@color/background_read"
		   	/>
		<com.ferg.awful.preferences.ColorPickerPreference
		   	alphaSlider="false"
		   	android:key="alternative_read_post_background_color"
		   	android:title="@string/read_post_background_color"
		   	android:defaultValue="@color/background_read"
		   	/>
		<com.ferg.awful.preferences.ColorPickerPreference
		   	alphaSlider="false"
		   	android:defaultValue="@color/op_post"
		   	android:key="op_post_color"
		   	android:title="@string/op_post_color"
		   	/>
		<com.ferg.awful.preferences.ColorPickerPreference
		   	alphaSlider="false"
		   	android:key="link_quote_color"
		   	android:title="@string/hyperlink_font_quote_color"
		   	android:defaultValue="@color/link_quote"
		   	/>
	</PreferenceCategory>
</PreferenceScreen>