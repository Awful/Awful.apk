{
    "extends": "eslint:recommended",
    "env": {
        "browser": true
    },
    "globals": {
        "listener": true,
        "JSONP": true,
        "processThreadEmbeds": true,
        "Longtap": true
    },
    "rules": {
        "curly": 2,
        "no-extra-parens": [
            2,
            "all", {
                "nestedBinaryExpressions": false
            }
        ],
        "eqeqeq": 2,
        "no-use-before-define": [
            2, {
                "functions": false
            }
        ],
        "no-undef": 2,
        "no-unused-vars": ["error", { "vars": "local", "args": "all"}],
        "strict": [2, "global"],
        "brace-style": 2,
        "no-mixed-spaces-and-tabs": 2,
        "key-spacing": 2,
        "comma-spacing": 2,
        "array-bracket-spacing": 2,
        "space-in-parens": 2,
        "no-trailing-spaces": 2,
        "comma-dangle": 2,
        "comma-style": 2,
        "space-infix-ops": 2,
        "keyword-spacing": 2,
        "space-before-blocks": 2,
        "space-before-function-paren": [2, "never"],
        "spaced-comment": 2,
        "no-multiple-empty-lines": [
            2, {
                "max": 1
            }
        ],
        "valid-jsdoc": [2, {
            "requireReturn": false
        }],
        "require-jsdoc": 2,
        "complexity": 2,
        "max-depth": [
            2, {
                "max": 3
            }
        ],
        "default-case": 2,
        "dot-notation": 2,
        "no-alert": 2,
        "no-empty-function": 2,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-extra-bind": 2,
        "no-implicit-coercion": 2,
        "no-multi-spaces": 2,
        "no-useless-return": 2,
        "no-warning-comments": 2,
        "camelcase": 2,
        "computed-property-spacing": 2,
        "consistent-this": 2,
        "func-call-spacing": 2,
        "func-names": 2,
        "func-name-matching": 2,
        "func-style": [2, "declaration"],
        "id-length": [
            2, {
                "min": 3,
                "exceptions": ["i", "j", "id", "ID", "$"]
            }
        ],
        "indent": [2, "tab"],
        "line-comment-position": 2,
        "lines-around-comment": 2,
        "max-len": [
            2, {
                "code": 200,
                "ignoreStrings": true
            }
        ],
        "max-statements-per-line": 2,
        "no-lonely-if": 2,
        "no-mixed-operators": 2,
        "no-multi-assign": 2,
        "no-unneeded-ternary": 2,
        "object-property-newline": 2,
        "operator-linebreak": 2,
        "quote-props": [2, "as-needed"],
        "quotes": [2, "single"],
        "semi": 2,
        "semi-spacing": 2,
        "one-var": [2, "never"]
    }
}
