<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dialog_size"
    android:layout_height="match_parent"
    android:background="?attr/background"
    tools:context=".PostActionFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="http://www.telegraph.co.uk/personal-banking/mortgages/sweden-cuts-maximum-mortgage-term-to-105-years-the-average-is-14/"
        android:id="@+id/actionTitle"
        android:layout_gravity="center_horizontal"
        android:background="?attr/colorPrimary"
        android:padding="8dp"
        android:textColor="@color/actionbar_font_color"
        android:gravity="center_horizontal"
        android:maxLines="3"
        android:scrollbars = "vertical" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="@dimen/dialog_size"
        android:layout_height="match_parent"
        android:id="@+id/post_actions"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        tools:listitem="@layout/action_item" />

</LinearLayout>