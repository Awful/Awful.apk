<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="@color/background"
    >
    <com.ferg.awfulapp.widget.AwfulProgressBar 
        android:id="@+id/progress_bar"
		android:layout_width="fill_parent"
		android:layout_height="4dp"
		android:visibility="gone"
       />
    <include
        android:id="@+id/probationbar"
        layout="@layout/probationbar"
        />
    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/forum_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
	<ListView
		android:id="@+id/forum_list" 
		android:layout_width="fill_parent"
		android:layout_height="0dip"
        android:divider="#8c8c8c"
        android:dividerHeight="1dp"
		android:cacheColorHint="@color/background"
        android:layout_weight="1"
		/>
    </android.support.v4.widget.SwipeRefreshLayout>
	<include 
        android:id="@+id/pagebar"
        layout="@layout/pagebar"
        />
</LinearLayout>
