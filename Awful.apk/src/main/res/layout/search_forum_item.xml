    android:orientation="vertical"
    android:padding="8dp">
    <TextView
        android:id="@+id/search_forum_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:text="General Bullshit 2: On The Move"/>
    <CheckBox
        android:id="@+id/search_forum_checkbox"
