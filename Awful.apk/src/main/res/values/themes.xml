<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AwfulTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set AppCompat’s actionBarStyle -->
        <item name="actionBarStyle">@style/Widget.AppCompat.ActionBar</item>
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/forums_blue</item>
        <item name="colorPrimaryDark">@color/forums_blue_darker</item>
        <item name="colorAccent">@color/holo_blue_light</item>
        <item name="background">@color/background</item>
        <item name="sidebarAvatarOverlayBackground">@color/sidebarOverlay</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/Base.Widget.AppCompat.ActionButton.Overflow</item>
        <!-- The rest of your attributes -->
    </style>

    <style name="Theme.AwfulTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Set AppCompat’s actionBarStyle -->
        <item name="actionBarStyle">@style/Widget.AppCompat.ActionBar</item>
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/actionbar_color</item>
        <item name="colorPrimaryDark">@color/dark_alt_background</item>
        <item name="colorAccent">@color/holo_blue_light</item>
        <item name="background">@color/dark_alt_background</item>
        <item name="sidebarAvatarOverlayBackground">@color/sidebarOverlay_dark</item>


        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- The rest of your attributes -->
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AwfulOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/abc_ic_menu_moreoverflow_mtrl_alpha</item>
    </style>
</resources>